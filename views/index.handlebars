<header class="text-center ">
  <br>
  <img src="{{imageLink}}" alt="{{alt}}" width="{{width}}" height="{{height}}" />
  <h1 class="text-danger">Eat-Da-Burger!</h1>
</header><br>


<main class="container ">
  <section class="row ">
    {{!-- Lists un-devoured Burgers --}}
    <div class="text-center col-md-4 mr-4">
      {{#each burgers}}
      {{#unless devoured}}
      <div class="row mb-4">
        <div class="col bg-light">
          <p class="centerText ">
            {{id}}. {{burger_name}}
          </p>

        </div>
        <div class="col">
          <button class="change-devour btn btn-light" data-id="{{id}}" data-newdevour="true">
            Devour!
          </button>

        </div>

      </div>

      {{/unless}}
      {{/each}}
    </div>

    {{!-- Devoured Burgers!--}}
    <div class="col-md-4 right">
      <ol class=" list-group">
        {{#each burgers}}
        {{#if devoured}}
        <li class="change-devour list-group-item" data-id="{{id}}" data-newdevour="false">
          {{id}}. {{burger_name}}
        </li>
        {{/if}}
        {{/each}}
      </ol>
      <br>
      {{!-- Delete All button --}}
      <div class="row justify-content-center">
        <button type="submit" class="btn btn-danger col-md-3 reset">Delete All</button><br>
      </div>
    </div>
    <br>

  </section><br><br>

{{!-- Submit form for new burger --}}
  <form class="row justify-content-center create-form">
    <div class="form-group col-md-6 text-center">
      <textarea class="form-control" id="inputBurger" name="name" rows="3"></textarea><br>
      <button type="submit" class="btn btn-primary">Submit</button><br>
      <label for="exampleFormControlTextarea1">Enter a burger you want to eat and then Click the "Submit" button</label>
    </div>

  </form>

</main>